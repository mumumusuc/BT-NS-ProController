<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
            android:layout_width="@dimen/gamepad_btn_size"
            android:layout_height="@dimen/gamepad_btn_size"
            android:src="@drawable/ns_logo"
            android:id="@+id/ns_logo"
            android:tint="@color/dark_gray"
            android:transitionName="ns_logo"
            android:contentDescription="ns_logo"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="switch"
              android:textStyle="bold"
              android:textColor="@color/dark_gray"
              android:textAllCaps="true"
              android:letterSpacing="0.2"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toBottomOf="@+id/ns_logo"
              app:layout_constraintStart_toStartOf="@+id/ns_logo"
              app:layout_constraintEnd_toEndOf="@+id/ns_logo" android:id="@+id/textView"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAllCaps="true"
              android:textStyle="bold"
              android:text="NINTENDO"
              app:layout_constraintStart_toStartOf="@+id/textView"
              app:layout_constraintEnd_toEndOf="@+id/textView"
              app:layout_constraintTop_toBottomOf="@+id/textView"
              android:id="@+id/textView2"/>
    <ImageView android:layout_width="55dp"
               android:layout_height="10dp"
               android:id="@+id/player"
               android:layout_gravity="center"
               android:src="@drawable/player_list"
               android:elevation="4dp"
               android:background="@drawable/player_bg"
               app:layout_constraintStart_toStartOf="@+id/ns_logo" app:layout_constraintEnd_toEndOf="@+id/ns_logo"
               app:layout_constraintTop_toTopOf="@+id/textView" android:layout_marginTop="52dp"
               app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            style="@style/gamepad_btn"
            android:text="L"
            android:tag="L"
            android:id="@+id/button_L"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <Button
            style="@style/gamepad_btn"
            android:text="ZL"
            android:tag="ZL"
            android:id="@+id/button_ZL"
            app:layout_constraintStart_toEndOf="@+id/button_L"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/button_L" app:layout_constraintBottom_toBottomOf="@+id/button_L"/>
    <Button
            style="@style/gamepad_btn"
            android:text="ZR"
            android:tag="ZR"
            android:id="@+id/button_ZR"
            app:layout_constraintEnd_toStartOf="@+id/button_R"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_R"
            app:layout_constraintTop_toTopOf="@+id/button_R"/>

    <Button
            style="@style/gamepad_btn"
            android:text="R"
            android:tag="R"
            android:id="@+id/button_R"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>


    <Space
            android:layout_width="@dimen/gamepad_btn_size"
            android:layout_height="@dimen/gamepad_btn_size"
            android:id="@+id/space_act"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp"/>
    <Button
            style="@style/gamepad_btn_round"
            android:text="A"
            android:tag="A"
            android:id="@+id/button_A"
            app:layout_constraintTop_toTopOf="@+id/space_act"
            app:layout_constraintBottom_toBottomOf="@+id/space_act"
            app:layout_constraintStart_toEndOf="@+id/space_act"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="8dp"/>
    <Button
            style="@style/gamepad_btn_round"
            android:text="B"
            android:tag="B"
            android:id="@+id/button_B"
            app:layout_constraintEnd_toEndOf="@+id/space_act"
            app:layout_constraintStart_toStartOf="@+id/space_act"
            app:layout_constraintTop_toBottomOf="@+id/space_act"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <Button
            style="@style/gamepad_btn_round"
            android:text="X"
            android:tag="X"
            android:id="@+id/button_X"
            app:layout_constraintEnd_toEndOf="@+id/space_act"
            app:layout_constraintStart_toStartOf="@+id/space_act"
            app:layout_constraintBottom_toTopOf="@+id/space_act"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"/>
    <Button
            style="@style/gamepad_btn_round"
            android:text="Y"
            android:tag="Y"
            android:id="@+id/button_Y"
            app:layout_constraintTop_toTopOf="@+id/space_act"
            app:layout_constraintBottom_toBottomOf="@+id/space_act"
            app:layout_constraintEnd_toStartOf="@+id/space_act"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp"/>

    <Space
            android:layout_width="@dimen/gamepad_btn_size"
            android:layout_height="@dimen/gamepad_btn_size"
            android:id="@+id/space_dpad"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp"/>
    <Button
            style="@style/gamepad_btn_round.icon"
            android:id="@+id/button_right"
            android:tag="RIGHT"
            android:foreground="@drawable/ic_btn_right"
            app:layout_constraintBottom_toBottomOf="@+id/space_dpad"
            app:layout_constraintTop_toTopOf="@+id/space_dpad"
            app:layout_constraintStart_toEndOf="@+id/space_dpad"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginStart="8dp"/>
    <Button
            style="@style/gamepad_btn_round.icon"
            android:id="@+id/button_down"
            android:tag="DOWN"
            android:foreground="@drawable/ic_btn_down"
            app:layout_constraintEnd_toEndOf="@+id/space_dpad"
            app:layout_constraintStart_toStartOf="@+id/space_dpad"
            app:layout_constraintTop_toBottomOf="@+id/space_dpad"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"/>
    <Button
            style="@style/gamepad_btn_round.icon"
            android:id="@+id/button_up"
            android:tag="UP"
            android:foreground="@drawable/ic_btn_up"
            app:layout_constraintEnd_toEndOf="@+id/space_dpad"
            app:layout_constraintStart_toStartOf="@+id/space_dpad"
            app:layout_constraintBottom_toTopOf="@+id/space_dpad"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp"/>
    <Button
            style="@style/gamepad_btn_round.icon"
            android:id="@+id/button_left"
            android:tag="LEFT"
            android:foreground="@drawable/ic_btn_left"
            app:layout_constraintTop_toTopOf="@+id/space_dpad"
            app:layout_constraintBottom_toBottomOf="@+id/space_dpad"
            app:layout_constraintEnd_toStartOf="@+id/space_dpad"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="8dp"
    />

    <Button
            style="@style/gamepad_btn_round.small"
            android:id="@+id/button_plus"
            android:tag="PLUS"
            android:foreground="@drawable/ic_btn_plus"
            app:layout_constraintStart_toEndOf="@+id/ns_logo"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_X"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_home"/>
    <Button
            style="@style/gamepad_btn_round.small"
            android:id="@+id/button_minus"
            android:tag="MINUS"
            android:foreground="@drawable/ic_btn_minus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_up"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/button_capture"/>
    <Button
            style="@style/gamepad_btn_round.small"
            android:id="@+id/button_capture"
            android:tag="CAP"
            android:foreground="@drawable/ic_btn_capture"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_right"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_home"/>
    <Button
            style="@style/gamepad_btn_round.small"
            android:id="@+id/button_home"
            android:tag="HOME"
            android:foreground="@drawable/ic_btn_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_capture"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_Y"/>
    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:JV_buttonColor="#000"
            custom:JV_buttonSizeRatio="20%"
            custom:JV_borderColor="@color/black_overlay"
            custom:JV_backgroundColor="@color/black_overlay"
            custom:JV_borderWidth="1dp"
            custom:JV_fixedCenter="true"
            android:id="@+id/right_stick"
            android:layout_marginEnd="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <io.github.controlwear.virtual.joystick.android.JoystickView
            android:layout_width="200dp"
            android:layout_height="200dp"
            custom:JV_buttonColor="#000"
            custom:JV_buttonSizeRatio="20%"
            custom:JV_borderColor="@color/black_overlay"
            custom:JV_backgroundColor="@color/black_overlay"
            custom:JV_borderWidth="1dp"
            custom:JV_fixedCenter="true"
            android:id="@+id/left_stick"
            android:layout_marginStart="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            style="@style/gamepad_btn_round"
            android:tag="LS"
            android:text="LS"
            android:id="@+id/button_LS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            android:layout_marginBottom="64dp"/>
    <Button
            style="@style/gamepad_btn_round"
            android:tag="RS"
            android:text="RS"
            android:id="@+id/button_RS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            android:layout_marginBottom="64dp"/>
</android.support.constraint.ConstraintLayout>