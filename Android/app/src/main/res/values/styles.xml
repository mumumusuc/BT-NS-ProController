<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="gamepad_btn_round">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/gamepad_btn_size</item>
        <item name="android:layout_height">@dimen/gamepad_btn_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/gamepad_btn_text_size</item>
        <item name="android:textColor">@color/gamepad_btn_text</item>
        <item name="android:backgroundTint">@color/gamepad_btn_bg</item>
        <item name="android:background">@drawable/bg_round</item>
    </style>

    <style name="gamepad_btn" parent="gamepad_btn_round">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@color/gamepad_btn_bg</item>
    </style>

    <style name="gamepad_btn_round.icon" parent="gamepad_btn_round">
        <item name="android:foregroundTint">@color/gamepad_btn_text</item>
    </style>

    <style name="gamepad_btn_round.small" parent="gamepad_btn_round">
        <item name="android:layout_width">@dimen/gamepad_btn_small_size</item>
        <item name="android:layout_height">@dimen/gamepad_btn_small_size</item>
        <item name="android:background">@null</item>
    </style>
</resources>
